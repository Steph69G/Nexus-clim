// supabase/functions/send-test-email/index.ts

import { serve } from "https://deno.land/std@0.168.0/http/server.ts";

serve(async (req) => {
  try {
    const { to } = await req.json();
    const RESEND_API_KEY = Deno.env.get("RESEND_API_KEY");
    const FROM = Deno.env.get("RESEND_FROM_EMAIL") || "noreply@nexus-clim.fr";

    const html = `
      <div style="font-family:sans-serif;padding:20px">
        <h2 style="color:#0066cc">✅ Test Nexus Clim</h2>
        <p>Ceci est un e-mail de test envoyé via <strong>Resend</strong>.</p>
        <p>Tout fonctionne parfaitement !</p>
      </div>
    `;

    const res = await fetch("https://api.resend.com/emails", {
      method: "POST",
      headers: {
        Authorization: `Bearer ${RESEND_API_KEY}`,
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        from: `Nexus Clim <${FROM}>`,
        to,
        subject: "Test e-mail Resend ✅",
        html,
      }),
    });

    const data = await res.json();

    if (!res.ok) throw new Error(data.message || "Erreur envoi e-mail");

    return new Response(JSON.stringify({ success: true, data }), {
      headers: { "Content-Type": "application/json" },
    });
  } catch (error) {
    return new Response(JSON.stringify({ success: false, error: error.message }), {
      headers: { "Content-Type": "application/json" },
      status: 500,
    });
  }
});
